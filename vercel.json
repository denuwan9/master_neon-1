{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "cd client && npm install && cd ../server && npm install && cd ../api && npm install",
  "framework": "vite",
  "functions": {
    "api/neon-request.js": {
      "maxDuration": 60
    },
    "api/contact.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
